<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:gravity="center"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SignUpActivity">
    <ImageView
            android:src="@drawable/contract_image"
            android:layout_width="150dp"
            android:layout_height="150dp"  android:id="@+id/imageView_signUp"
            tools:layout_editor_absoluteY="135dp" tools:layout_editor_absoluteX="145dp"/>
    <EditText
            android:inputType="number"
            android:id="@+id/edittext_userstudentemail_signUp"
            android:paddingLeft="10dp"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/custom_email_icon"
            android:background="@drawable/input_custom"
            android:textColor="#ffffff"
            android:textColorHint="#d3d3d3"
            android:layout_marginTop="50dp"
            android:hint=" Set User Student Number"
            android:layout_width="320dp" android:layout_height="50dp"
            android:singleLine="true" />
    <EditText
            android:id="@+id/edittext_password_signUp"
            android:paddingEnd="10dp"
            android:paddingLeft="10dp"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/custom_lock_icon"
            android:inputType="textPassword"
            android:singleLine="true"
            android:background="@drawable/input_custom"
            android:textColor="#ffffff"
            android:textColorHint="#d3d3d3"
            android:layout_marginTop="15dp"
            android:hint="Set Password"
            android:layout_width="320dp" android:layout_height="50dp"/>
    <EditText
            android:id="@+id/edittext_verify"
            android:paddingEnd="10dp"
            android:paddingLeft="10dp"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/custom_verify_icon"
            android:inputType="textPassword"
            android:singleLine="true"
            android:background="@drawable/input_custom"
            android:textColor="#ffffff"
            android:textColorHint="#d3d3d3"
            android:layout_marginTop="15dp"
            android:hint="Verify Password"
            android:layout_width="320dp" android:layout_height="50dp"/>
    <Button
            android:onClick="signUp"
            android:textStyle="bold"
            android:textSize="10pt"
            android:background="@drawable/button_custom"
            android:layout_marginTop="30dp"
            android:text="sÄ±gnup"
            android:layout_width="320dp"
            android:layout_height="50dp" android:id="@+id/button_signUp"/>

</LinearLayout>